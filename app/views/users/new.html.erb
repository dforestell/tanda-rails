<div class="signup-form">
	<h1>Sign Up</h1>
	<%= form_with model: @user do |f| %>
	<div>
        <%= f.label :Name %>
		<%= f.text_field :name%>
	</div>

	<div>
        <%= f.label :Email%>
		<%= f.email_field :email %>
	</div>

	<div>	
        <%= f.label :Password %>
		<%= f.password_field :password %>
	</div>

    <div>
        <%= f.label :Password_confirmation %>
		<%= f.password_field :password_confirmation%>
	</div>

	<div>
		<%= f.submit "Sign Up" %>
	</div>
	<% end %>
</div>