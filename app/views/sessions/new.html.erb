<div class="user-form">
	<h1>Login</h1>
    	<% if @error %>
		<ul>
			<li class="error"><%= @error %> </li>
		</ul>
	<%end%>
	<%= form_with url: login_path, local: true do |f| %>
	<div>
        <%= f.label :Email%>
		<%= f.email_field :email %>
	</div>

	<div>	
        <%= f.label :Password %>
		<%= f.password_field :password %>
	</div>

	<div>
		<%= f.submit "Log In" %>
	</div>
	<% end %>
	<%= link_to 'Sign up', signup_path %>
</div>
