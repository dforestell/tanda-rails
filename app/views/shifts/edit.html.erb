<%= form_with url: organization_shift_path(@organization, @shift), method: :put, local: true do |f| %>
<table>
  <tr>
    <th>Employee Name</th>
    <th>Shift Date</th>
    <th>Start Time</th>
    <th>Finish Time</th>
    <th>Break Length (minutes)</th>
    <th>Hours worked</th>
    <th>Shift Cost</th>
  </tr>
  <tr>
    <td>
      <%= current_user.name %>
    </td>
    <td>
      <%= f.date_select :date, order: [:month, :day, :year], default: @shift.start %>
    </td>

    <td>
      <%= f.time_select :start, default: @shift.start %>
    </td>

    <td>
      <%= f.time_select :finish, default: @shift.finish %>
    </td>

    <td>
      <%= f.text_field :break %>
    </td>

    <td colspan="2">
      <%= f.submit "Update Shift" %>
    </td>
  <tr>
</table>

	<% end %>
